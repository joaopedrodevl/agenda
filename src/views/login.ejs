<%- include('./includes/header') %>
<%- include('./includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8">
      <h1 class="text-center my-3">Criar conta ou entrar</h1>
      <p class="text-center lead">Entre com a sua conta ou crie uma</p>

      <%- include('./includes/messages') %>

      <div class="row">
        <div class="col-lg">
          <h4 class="text-center">Faça seu cadastro</h4>
          <p class="text-center">Se você ainda não tem conta, crie uma.</p>

          <form action="/login/register" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" id="email" aria-describedby="email" name="email">
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="password" name="password">
            </div>
            <button type="submit" class="btn btn-primary">Criar minha conta</button>
          </form>
        </div>

        <div class="col-lg">
          <h4 class="text-center">Entre com sua conta</h4>

          <p class="text-center">Se já tem uma conta, entre com ela.</p>

          <form action="/login/entrar" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" id="email" aria-describedby="email" name="email">
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="password" name="password">
            </div>
            <button type="submit" class="btn btn-primary">Entrar</button>
          </form>
        </div>
      </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('./includes/footer') %>
