<%- include('./includes/header') %>
<%- include('./includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8">
      <h1 class="text-center my-3">Agenda</h1>
      <p class="text-center lead">Seus contatos abaixo.</p>

      <%- include('./includes/messages') %>

      <% if (contatos.length > 0) {%>
      <div class="responsive-table">
        <table class="table my-3">
          <tr>
            <th scope="col">Nome</th>
            <th scope="col">Sobrenome</th>
            <th scope="col">Telefone</th>
            <th scope="col">Email</th>
            <th scope="col">Editar</th>
            <th scope="col">Excluir</th>
          </tr>
          <% contatos.forEach(contato => { %> 
            <tr>
              <td><%= contato.nome %></td>
              <td><%= contato.sobrenome %></td>
              <td><%= contato.telefone %></td>
              <td><%= contato.email %></td>
              <td><a class="text-decoration-none" href="/contato/<%= contato._id %>">Editar</a></td>
              <td><a class="text-danger text-decoration-none" href="/contato/delete/<%= contato._id %>">Excluir</a></td>
            </tr> 
          <% }); %>
        </table>
      </div>
      <% } else { %>
        <p class="text-center lead">Nenhum contato cadastrado.</p>
        <p class="text-center"><a class="text-decoration-none lead" href="/contato/">Cadastrar contato</a></p>
      <% } %>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('./includes/footer') %>
